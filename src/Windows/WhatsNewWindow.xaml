<tlw:TEKWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:tlw="clr-namespace:TEKLauncher.Windows"
               xmlns:ui="clr-namespace:TEKLauncher.UI" x:Class="TEKLauncher.Windows.WhatsNewWindow" WindowStartupLocation="CenterScreen" Title="{ui:LocString WhatsNew}" MinWidth="400"
               MaxWidth="900" MinHeight="250" MaxHeight="720" SizeToContent="WidthAndHeight">
    <Border BorderBrush="#1B3A4A" BorderThickness="2, 0, 2, 2" CornerRadius="0, 0, 8, 8">
        <Border.Background>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                <GradientStop Color="#151A21" Offset="0"/>
                <GradientStop Color="#21262E" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border Background="{StaticResource HexBackground}">
            <ScrollViewer Margin="5" Padding="0, 0, 5, 0" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="Root"/>
            </ScrollViewer>
        </Border>
    </Border>
</tlw:TEKWindow>