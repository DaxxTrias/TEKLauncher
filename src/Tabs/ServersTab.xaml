<ContentControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="TEKLauncher.Tabs.ServersTab">
    <ScrollViewer Margin="0, 0, 10, 0" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30, 20, 15, 20">
            <Button Template="{StaticResource IconButton}" x:Name="RefreshButton" HorizontalAlignment="Left" Content="{StaticResource Refresh}" Click="Refresh"/>
            <TextBlock x:Name="Status" FontSize="22" HorizontalAlignment="Center"/>
            <Grid x:Name="Root">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <StackPanel/>
                <StackPanel Grid.Column="2"/>
                <StackPanel Grid.Column="4"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</ContentControl>