<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:tlw="clr-namespace:TEKLauncher.Windows">
    <ControlTemplate TargetType="Button" x:Key="ClusterItemButton">
        <Border x:Name="Border" Background="#D0212C33" CornerRadius="20">
            <ContentPresenter/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                            <ColorAnimation To="#D0222F38" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                            <ColorAnimation To="#D0212C33" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                            <ColorAnimation To="#D0314757" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop">
                            <ColorAnimation To="#D0222F38" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate TargetType="Button" x:Key="ControlButton">
        <Border Background="Transparent">
            <Path x:Name="Shape" Stroke="#88ABE3" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="Tag" Value="1">
                <Setter TargetName="Shape" Property="Data" Value="M2,12.5h21"/>
            </Trigger>
            <Trigger Property="Tag" Value="2">
                <Setter TargetName="Shape" Property="Data" Value="M4,4h17v17H4Z"/>
            </Trigger>
            <Trigger Property="Tag" Value="3">
                <Setter TargetName="Shape" Property="Data" Value="M6,6h13v13H6ZM10,6V2H23V15h-4"/>
            </Trigger>
            <Trigger Property="Tag" Value="4">
                <Setter TargetName="Shape" Property="Data" Value="M2,2l21,21M2,23l21-21"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Shape" TargetProperty="Stroke.(SolidColorBrush.Color)">
                            <ColorAnimation To="#B9E388" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Shape" TargetProperty="Stroke.(SolidColorBrush.Color)">
                            <ColorAnimation To="#88ABE3" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Shape" TargetProperty="Stroke.(SolidColorBrush.Color)">
                            <ColorAnimation To="#E3AB62" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Shape" TargetProperty="Stroke.(SolidColorBrush.Color)" FillBehavior="Stop">
                            <ColorAnimation To="#B9E388" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate TargetType="Button" x:Key="FirstChoiceButton">
        <Border x:Name="Border" Background="#22282B" CornerRadius="20, 20, 0, 0">
            <Grid>
                <TextBlock Margin="10, 25, 10, 25" FontSize="22" HorizontalAlignment="Center" Text="{TemplateBinding Content}"/>
                <Polyline x:Name="Arrow" Margin="0, 0, 0, 5" Stroke="#A9D130" StrokeThickness="3" StrokeDashArray="50" StrokeDashOffset="51" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" HorizontalAlignment="Center" VerticalAlignment="Bottom" Points="1.5,18.5,20,1.5,38.5,18.5"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="Tag" Value="1">
                <Setter TargetName="Border" Property="CornerRadius" Value="0, 0, 20, 20"/>
                <Setter TargetName="Arrow" Property="Margin" Value="0, 5, 0, 0"/>
                <Setter TargetName="Arrow" Property="VerticalAlignment" Value="Top"/>
                <Setter TargetName="Arrow" Property="Points" Value="1.5,1.5,20,18.5,38.5,1.5"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#364045" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="Arrow" Storyboard.TargetProperty="StrokeDashOffset" To="0" Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#22282B" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="Arrow" Storyboard.TargetProperty="StrokeDashOffset" To="51" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                            <ColorAnimation To="#404536" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop">
                            <ColorAnimation To="#364045" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
