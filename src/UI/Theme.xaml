                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Circle" TargetProperty="Fill.(SolidColorBrush.Color)">
                                        <ColorAnimation To="#182A33" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Circle" TargetProperty="Stroke.(SolidColorBrush.Color)">
                                        <ColorAnimation To="#BAAE5D" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Circle" TargetProperty="Stroke.(SolidColorBrush.Color)" FillBehavior="Stop">
                                        <ColorAnimation To="#8CA8AB" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Mark" TargetProperty="StrokeDashOffset">
                                        <DoubleAnimation To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Mark" TargetProperty="StrokeDashOffset" FillBehavior="Stop">
                                        <DoubleAnimation To="13" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Popup Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}" AllowsTransparency="True" IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Placement="Bottom">
                            <Border Padding="7.5" Background="#21252B" BorderBrush="#9FD6D2" BorderThickness="2" CornerRadius="15">
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                        <ToggleButton Template="{StaticResource ComboBoxButton}" Focusable="False" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Content="{TemplateBinding SelectionBoxItem}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ComboBoxItem">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="Border" Background="#21252B">
                        <TextBlock HorizontalAlignment="Center" Text="{TemplateBinding Content}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                                        <ColorAnimation To="#27494D" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                                        <ColorAnimation To="#21252B" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Expander">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Border Padding="5" Background="#D021252B" BorderBrush="Gray" BorderThickness="2" CornerRadius="10">
                        <StackPanel>
                            <ToggleButton x:Name="Button" Template="{StaticResource ExpanderButton}" HorizontalAlignment="Left" IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <ContentControl x:Name="ContentBox" Height="0" Content="{TemplateBinding Content}"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ContentBox" TargetProperty="Height">
                                        <DoubleAnimation To="400" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ContentBox" TargetProperty="Height">
                                        <DoubleAnimation To="0" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Hyperlink">
        <Setter Property="Foreground" Value="DarkCyan"/>
        <Setter Property="TextDecorations" Value=""/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="Foreground.(SolidColorBrush.Color)">
                            <ColorAnimation To="Orange" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="Foreground.(SolidColorBrush.Color)">
                            <ColorAnimation To="DarkCyan" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsMouseCaptured" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="Foreground.(SolidColorBrush.Color)">
                            <ColorAnimation To="Red" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="Foreground.(SolidColorBrush.Color)" FillBehavior="Stop">
                            <ColorAnimation To="Orange" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="RadioButton">
        <Setter Property="Focusable" Value="False"/>
    </Style>
    <Style TargetType="ScrollBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"/>
                            <RowDefinition/>
                            <RowDefinition Height="18"/>
                        </Grid.RowDefinitions>
                        <RepeatButton Template="{StaticResource ScrollBarLineButton}" Focusable="False" Tag="T" Command="ScrollBar.LineUpCommand"/>
                        <Border Grid.Row="1" Style="{StaticResource ScrollBarBackground}" Background="#181D21" CornerRadius="9">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Template="{StaticResource ScrollBarPageButton}" Focusable="False" Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Template="{StaticResource ScrollBarThumb}" Margin="5" Focusable="False"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Template="{StaticResource ScrollBarPageButton}" Focusable="False" Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Border>
                        <RepeatButton Grid.Row="3" Template="{StaticResource ScrollBarLineButton}" Focusable="False" Tag="B" Command="ScrollBar.LineDownCommand"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Slider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <StackPanel>
                        <TickBar Fill="#C5D4E3" Placement="Top" Height="5"/>
                        <Track x:Name="PART_Track" Margin="0, 2, 0, 2">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Template="{StaticResource SliderDecreaseButton}" Height="4" Focusable="False" Command="Slider.DecreaseLarge"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Template="{StaticResource SliderThumb}" Focusable="False"/>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Template="{StaticResource SliderIncreaseButton}" Height="4" Focusable="False" Command="Slider.IncreaseLarge"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                        <TickBar Fill="#C5D4E3" Placement="Bottom" Height="5"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#9FD6D2"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="#9FD6D2"/>
        <Setter Property="CaretBrush" Value="Gray"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Border" Padding="10, 5, 10, 5" Background="#1B232E" BorderBrush="#8CA8AB" BorderThickness="2" CornerRadius="10">
                        <Grid>
                            <TextBlock x:Name="Placeholder" Foreground="Gray" FontSize="20" Visibility="Hidden" Text="{TemplateBinding Tag}"/>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                                        <ColorAnimation To="#212C33" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                                        <ColorAnimation To="#1B232E" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border">
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#212C33" Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)" To="#9FD6D2" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Border" FillBehavior="Stop">
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#1B232E" Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)" To="#9FD6D2" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ToolTip">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Padding="5" Background="#21252B" BorderBrush="#9FD6D2" BorderThickness="2" CornerRadius="10">
                        <TextBlock FontSize="14" Text="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="tlw:TEKWindow">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="35" CornerRadius="8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="../../res/fonts/#Nunito"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="tlw:TEKWindow">
                    <Grid x:Name="Root" UseLayoutRounding="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border x:Name="Caption" Background="#1B232E" BorderBrush="#1B3A4A" BorderThickness="2, 2, 2, 0" CornerRadius="8, 8, 0, 0">
                            <Grid Margin="20, 0, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Title" Foreground="#C5D4E3" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" Text="{TemplateBinding Title}"/>
                                <StackPanel Grid.Column="2" x:Name="ControlButtons" WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Center" Orientation="Horizontal">
                                    <Button Template="{StaticResource ControlButton}" Width="25" Height="25" Margin="0, 0, 5, 0" Tag="1"/>
                                    <Button Template="{StaticResource ControlButton}" Width="25" Height="25" Margin="5, 0, 5, 0" Tag="2"/>
                                    <Button Template="{StaticResource ControlButton}" Width="25" Height="25" Margin="5, 0, 10, 0" Tag="4"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ContentPresenter Grid.Row="1" x:Name="ContentBox" Content="{TemplateBinding Content}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>