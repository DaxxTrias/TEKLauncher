    <ControlTemplate TargetType="Button" x:Key="TextButton">
        <TextBlock x:Name="Text" Foreground="#267AAD" FontSize="24" Text="{TemplateBinding Content}"/>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Text" TargetProperty="Foreground.(SolidColorBrush.Color)">
