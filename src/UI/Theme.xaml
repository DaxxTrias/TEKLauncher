    <ControlTemplate TargetType="ContentControl" x:Key="LoadingDots">
        <Path Width="28" Height="8" Stroke="#107E91" StrokeThickness="4">
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry x:Name="Dot1" Center="4, 4" RadiusX="1" RadiusY="{Binding RadiusX, ElementName=Dot1}"/>
                    <EllipseGeometry x:Name="Dot2" Center="14, 4" RadiusX="1" RadiusY="{Binding RadiusX, ElementName=Dot2}"/>
                    <EllipseGeometry x:Name="Dot3" Center="24, 4" RadiusX="1" RadiusY="{Binding RadiusX, ElementName=Dot3}"/>
                </GeometryGroup>
            </Path.Data>
        </Path>
        <ControlTemplate.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot1" Storyboard.TargetProperty="RadiusX" Duration="0:0:0.5">
                            <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="2"/>
                            <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot2" Storyboard.TargetProperty="RadiusX" BeginTime="0:0:0.2" Duration="0:0:0.5">
                            <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="2"/>
                            <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot3" Storyboard.TargetProperty="RadiusX" BeginTime="0:0:0.4" Duration="0:0:0.5">
                            <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="2"/>
                            <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate TargetType="RadioButton" x:Key="ClusterButton">
        <Border x:Name="Border" Padding="20, 5, 20, 5" Background="#212C33">
            <StackPanel>
                <TextBlock x:Name="Text" FontSize="24" Text="{TemplateBinding Content}"/>
                <Rectangle x:Name="Underline" Width="0" Height="2" Stroke="Gray"/>
            </StackPanel>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="Tag" Value="L">
                <Setter TargetName="Border" Property="CornerRadius" Value="15, 0, 0, 15"/>
            </Trigger>
            <Trigger Property="Tag" Value="C">
                <Setter TargetName="Border" Property="CornerRadius" Value="15"/>
            </Trigger>
            <Trigger Property="Tag" Value="R">
                <Setter TargetName="Border" Property="CornerRadius" Value="0, 15, 15, 0"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#222F38" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="Underline" Storyboard.TargetProperty="Width" To="20" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#212C33" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="Underline" Storyboard.TargetProperty="Width" To="0" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)">
                            <ColorAnimation To="#314757" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetName="Border" TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop">
                            <ColorAnimation To="#222F38" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#283842" Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="Underline" Storyboard.TargetProperty="Stroke.(SolidColorBrush.Color)" To="Orange" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="Underline" Storyboard.TargetProperty="Width" To="40" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard FillBehavior="Stop">
                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#212C33" Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="Underline" Storyboard.TargetProperty="Stroke.(SolidColorBrush.Color)" To="Gray" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="Underline" Storyboard.TargetProperty="Width" To="0" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </ControlTemplate.Triggers>
